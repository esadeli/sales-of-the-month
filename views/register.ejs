<%- include('./header') %>
<div class="container" style="padding-top: 100px; max-width: 400px">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text-center"><strong>REGISTER</strong></h3>
            <div class="panel panel-primary">
                    <div class="panel-body">
                            <form action = "/register" method="POST" style="margin-top: 30px">
                                <p><strong>Username</strong></p>
                                <p><input type="text" name="username" class="form-control"></p>
                
                                <p><strong>Password</strong></p>
                                <p><input type="password" name="password" class="form-control"></p>
                                
                                <p>
                                    <button type="submit" class="btn btn-dark btn-block">Register</button>
                                </p>
                            </form>
                    </div>
            </div>
        </div>
    </div>
</div>
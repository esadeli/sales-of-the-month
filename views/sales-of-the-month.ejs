<%- include('./header') -%>

<div class="container" style="padding-top: 100px">
  <div class="row">
    <div class="col-lg-6" style="padding-top: 70px">
      <h2 class="text-center"><%= dateFormat() %></h2>
      <span class="fa fa-star" id="star"></span>
      <% let i = 1; %>
      <% names.forEach((name) => { %>
        <h3 class="text-center" id="<%= i++ %>"><strong><%= name %></strong></h3>
      <% }) %>
    </div>
    <div class="col-lg-6">
      <div class="chart-container" style="position: relative; height:400px; width:500px; margin: auto">
        <canvas id="myChart" width="200" height="200"></canvas>
      </div>
    </div>
  </div>
</div>


<%- include('./footer') -%>
<script>
  var ctx = document.getElementById("myChart").getContext('2d');
  var namesLabel = <%- JSON.stringify(names) %>;
  var amountsData = <%- JSON.stringify(amounts) %>;
//   alert(amountsData);
  var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
          labels: namesLabel,
          datasets: [{
              label: '# of Votes',
              data: amountsData,
              backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
                  'rgba(54, 162, 235, 0.2)',
                  'rgba(255, 206, 86, 0.2)',
                  'rgba(75, 192, 192, 0.2)',
                  'rgba(153, 102, 255, 0.2)',
                  'rgba(255, 159, 64, 0.2)'
              ],
              borderColor: [
                  'rgba(255,99,132,1)',
                  'rgba(54, 162, 235, 1)',
                  'rgba(255, 206, 86, 1)',
                  'rgba(75, 192, 192, 1)',
                  'rgba(153, 102, 255, 1)',
                  'rgba(255, 159, 64, 1)'
              ],
              borderWidth: 1
          }]
      },
      options: {
          scales: {
              yAxes: [{
                  ticks: {
                      beginAtZero:true
                  }
              }]
          }
      }
  });
  </script>